<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SourceSearch.ItemRow"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    >
    <TextView
        android:id="@+id/source_search_row__source_item__title"
        android:paddingEnd="@dimen/setting_channels_row_padding"
        android:paddingStart="@dimen/setting_channels_row_padding"
        android:drawableStart="@drawable/ic_feed"
        style="@style/SourceSearch.ItemTitle"
        />
    <TextView
        android:id="@+id/source_search_row__source_item__url"
        android:layout_below="@id/source_search_row__source_item__title"
        android:layout_marginStart="26dp"
        style="@style/SourceSearch.ItemUrl"
        />

    <View
        android:id="@+id/border"
        android:layout_below="@id/source_search_row__source_item__url"
        style="@style/SourceSearch.ItemBorder"
        />

    <TextView
        android:id="@+id/source_search_row__source_item__subscribe"
        android:text="SUBSCRIBE"
        android:layout_below="@id/border"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        style="@style/SourceSearch.ItemBottomText"
        />

    <TextView
        android:id="@+id/source_search_row__source_item__entries"
        android:text="ENTRIES"
        android:layout_below="@id/border"
        android:layout_toStartOf="@id/source_search_row__source_item__subscribe"
        style="@style/SourceSearch.ItemBottomText"
        />

</RelativeLayout>

</android.support.v7.widget.CardView>
