<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    >

    <android.support.design.widget.TextInputLayout
        android:id="@+id/setting_my_channel_create__channel_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/setting_my_channel_create__channel_name"
            android:theme="@style/AppTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="channel name"
            android:inputType="text"
            android:textSize="16sp"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/setting_my_channel_create__channel_description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        >
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/setting_my_channel_create__channel_description"
            android:theme="@style/AppTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="(option) description"
            android:inputType="text"
            android:textSize="16sp"
            />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>
