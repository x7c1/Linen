<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SourceSearch.ItemRow"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    >
    <TextView
        android:id="@+id/source_search_row__client_error__message"
        android:layout_marginBottom="10dp"
        android:paddingEnd="@dimen/setting_channels_row_padding"
        android:paddingStart="14dp"
        android:drawableStart="@drawable/ic_report_problem"

        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:fontFamily="sans-serif-condensed"

        style="@style/SourceSearch.ItemTitle"
        />

    <View
        android:id="@+id/border"
        android:layout_below="@id/source_search_row__client_error__message"
        style="@style/SourceSearch.ItemBorder"
        />

    <TextView
        android:id="@+id/source_search_row__client_error__retry"
        android:text="RETRY"
        android:layout_below="@id/border"
        android:layout_alignParentEnd="true"
        android:drawableEnd="@drawable/ic_refresh"
        android:drawablePadding="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="0dp"
        style="@style/SourceSearch.ItemBottomText"
        />

    <TextView
        android:id="@+id/source_search_row__client_error__url"
        android:layout_toStartOf="@id/source_search_row__client_error__retry"
        android:layout_alignBaseline="@id/source_search_row__client_error__retry"
        style="@style/SourceSearch.ItemBottomText.OriginUrl"
        />

</RelativeLayout>

</android.support.v7.widget.CardView>
