<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppCardView"
    >

<RelativeLayout
    style="@style/AppCardViewRow"
    android:paddingStart="10dp"
    android:paddingEnd="5dp"
    >

    <TextView
        android:id="@+id/source_row__title"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/source_row__description"
        android:textSize="15sp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/source_row__title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/source_row__state_unloaded"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="5dp"
        android:layout_height="fill_parent"
        android:minHeight="30dp"
        android:background="@color/light_gray"
        />

    <View
        android:id="@+id/source_row__state_prefetched"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="5dp"
        android:layout_height="fill_parent"
        android:minHeight="30dp"
        android:background="@color/opaque_blue"
        />

</RelativeLayout>

</android.support.v7.widget.CardView>
