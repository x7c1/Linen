<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="0dp"
    >

    <RelativeLayout
        style="@style/AppCardViewRow"
        >
        <TextView
            android:id="@+id/unread_detail_row__entry__title"
            android:textSize="17sp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:lineSpacingExtra="4dp"
            android:lineSpacingMultiplier="1.1"
            android:textColor="@color/text_primary"
            />

        <View
            android:id="@+id/border1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/unread_detail_row__entry__title"
            android:background="@color/text_tertiary"
            />

        <TextView
            android:id="@+id/unread_detail_row__entry__content"
            android:textSize="15sp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/border1"
            android:textColor="@color/text_secondary"
            android:textColorLink="@color/ruriiro"
            android:lineSpacingExtra="4dp"
            android:lineSpacingMultiplier="1.2"
            />

        <TextView
            android:id="@+id/unread_detail_row__entry__created_at"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/unread_detail_row__entry__content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/text_tertiary"
            android:textSize="13sp"
            android:fontFamily="sans-serif-condensed"
            />

        <TextView
            android:id="@+id/unread_detail_row__entry__author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/unread_detail_row__entry__content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:layout_toStartOf="@id/unread_detail_row__entry__created_at"
            android:textColor="@color/text_tertiary"
            android:textSize="13sp"
            android:fontFamily="sans-serif-condensed"
            />

        <View
            android:id="@+id/border2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/unread_detail_row__entry__created_at"
            android:background="@color/text_tertiary"
            />

        <View
            android:id="@+id/dummy_to_position_center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/border2"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/unread_detail_row__entry__later"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/border2"
            android:layout_toStartOf="@id/dummy_to_position_center"
            android:layout_marginEnd="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-condensed"
            android:textSize="13sp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableStart="@drawable/ic_share_black_24dp"
            android:drawablePadding="3dp"
            android:text="LATER"
            />

        <TextView
            android:id="@+id/unread_detail_row__entry__visit"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/border2"
            android:layout_toEndOf="@id/dummy_to_position_center"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-condensed"
            android:textSize="13sp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableStart="@drawable/ic_open_in_new_black_24dp"
            android:drawablePadding="3dp"
            android:text="OPEN"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
