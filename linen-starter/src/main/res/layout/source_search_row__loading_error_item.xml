<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SourceSearch.ItemRow"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    >
    <TextView
        android:id="@+id/source_search_row__loading_error_item__message"
        android:paddingTop="4dp"
        android:paddingEnd="@dimen/setting_channels_row_padding"
        android:paddingStart="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:lineSpacingExtra="4dp"
        android:lineSpacingMultiplier="1.1"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_error_outline"
        />

    <TextView
        android:id="@+id/source_search_row__loading_error_item__url"
        android:layout_below="@id/source_search_row__loading_error_item__message"
        android:layout_marginStart="28dp"
        style="@style/SourceSearch.ItemUrl"
        />

    <View
        android:id="@+id/border"
        android:layout_below="@id/source_search_row__loading_error_item__url"
        style="@style/SourceSearch.ItemBorder"
        />

    <TextView
        android:id="@+id/source_search_row__loading_error_item__open"
        android:text="OPEN"
        android:layout_below="@id/border"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        style="@style/SourceSearch.ItemBottomText"
        />

</RelativeLayout>

</android.support.v7.widget.CardView>
