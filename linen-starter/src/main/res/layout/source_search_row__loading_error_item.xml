<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SourceSearch.ItemRow"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    >
    <TextView
        android:id="@+id/source_search_row__loading_error_item__message"
        android:layout_marginBottom="10dp"
        android:paddingEnd="@dimen/setting_channels_row_padding"
        android:paddingStart="14dp"
        android:drawableStart="@drawable/ic_error_outline"
        style="@style/SourceSearch.ItemTitle"
        />

    <View
        android:id="@+id/border"
        android:layout_below="@id/source_search_row__loading_error_item__message"
        style="@style/SourceSearch.ItemBorder"
        />

    <TextView
        android:id="@+id/source_search_row__loading_error_item__url"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@id/border"
        android:layout_marginStart="44dp"
        android:textAlignment="textEnd"
        android:drawableEnd="@drawable/ic_open_in_new_18dp"
        android:drawablePadding="4dp"
        android:textColor="@color/text_tertiary"
        android:textSize="14sp"
        style="@style/SourceSearch.ItemBottomText"
        />

</RelativeLayout>

</android.support.v7.widget.CardView>
