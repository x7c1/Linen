<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/dev_create_records_layout__toolbar"
            style="@style/AppToolbar"
            app:title="Create Dummies"
            />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sources"
        android:textColor="@color/text_tertiary"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label_target_channels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="target channel(s)"
            />

        <TextView
            android:id="@+id/dev_create_records_layout__selected_channels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/label_target_channels"
            />

        <Button
            android:id="@+id/dev_create_records_layout__select_channels"
            android:layout_below="@id/dev_create_records_layout__selected_channels"
            android:layout_alignStart="@id/dev_create_records_layout__selected_channels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/dev_create_records_layout__create_dummy_sources"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create dummy sources"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_tertiary"
        />

    <Button
        android:id="@+id/dev_create_records_layout__create_dummies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create dummies"
        />

    <Button
        android:id="@+id/dev_create_records_layout__create_preset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create preset"
        />

    <Button
        android:id="@+id/dev_create_records_layout__delete_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete database"
        />

</LinearLayout>
