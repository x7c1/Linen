<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppCardView"
    >

    <LinearLayout
        style="@style/AppCardViewRow"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/entry_detail_row__title"
            android:textSize="17sp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:lineSpacingExtra="4dp"
            android:lineSpacingMultiplier="1.1"
            android:textColor="@color/rouiro"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_secondary"
            />

        <TextView
            android:id="@+id/entry_detail_row__content"
            android:textSize="15sp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4b4b4b"
            android:textColorLink="@color/to_next_button_background"
            android:lineSpacingExtra="4dp"
            android:lineSpacingMultiplier="1.2"
            />

        <TextView
            android:id="@+id/entry_detail_row__created_at"
            android:textSize="12sp"
            android:textAlignment="textEnd"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
