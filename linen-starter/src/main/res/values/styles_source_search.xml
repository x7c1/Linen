<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SourceSearch">
    </style>

    <style name="SourceSearch.LabelRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>

        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>

        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SourceSearch.LabelMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>

        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">8dp</item>

        <item name="android:drawableEnd">@drawable/ic_more_horiz</item>

        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="SourceSearch.LabelDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>

        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">12dp</item>

        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="SourceSearch.ItemRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="SourceSearch.ItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="SourceSearch.ItemUrl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SourceSearch.ItemBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@color/text_tertiary</item>
    </style>

    <style name="SourceSearch.ItemBottomText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>

        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingTop">10dp</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SourceSearch.ItemBottomText.OriginUrl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/border</item>

        <item name="android:drawablePadding">4dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">40dp</item>

        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SourceSearch.ItemBottomText.OriginUrl.ToOpen">
        <item name="android:drawableEnd">@drawable/ic_open_in_new_18dp</item>
    </style>

</resources>
