<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LinenChecklist">
    </style>

    <style name="LinenChecklist.Line">
        <item name="android:orientation">horizontal</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">18dp</item>

        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LinenChecklist.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/to_next_button_background</item>
    </style>

    <style name="LinenChecklist.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
