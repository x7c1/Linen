<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <!-- e.g. option menu on Toolbar -->
        <item name="colorControlNormal">@color/transparent_white</item>
    </style>

    <style name="AppToolbar">
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="AppCardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">-3dp</item>
        <item name="android:layout_marginRight">-2dp</item>
        <item name="android:layout_marginLeft">-2dp</item>

    </style>

    <style name="AppCardViewRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>

        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <color name="opaque_red">#f9edf0</color>
    <color name="opaque_blue">#ecf1ff</color>
    <color name="opaque_green">#ecfff1</color>

    <color name="amaranth">#e52b50</color>
    <color name="cardinal">#C41E3A</color>
    <color name="carnelian">#B31B1B</color>
    <color name="cerulean_blue">#2A52BE</color>
    <color name="generic_viridian">#007F66</color>
    <color name="saddle_brown">#8B4513</color>
    <color name="sienna">#882D17</color>

    <color name="light_gray">#e6e6e6</color>

    <!-- this value is affected by the opacity of drawer icon (dark theme) -->
    <color name="transparent_white">#89ffffff</color>

</resources>
