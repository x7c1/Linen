<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <!-- e.g. option menu on Toolbar -->
        <item name="colorControlNormal">@color/transparent_white</item>

        <!-- e.g. SwitchCompat -->
        <item name="colorControlActivated">@color/to_next_button_background</item>
    </style>

    <style name="AppTheme.Polyfill">
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">@color/cardinal</item>
    </style>

    <style name="AppItemList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/list_background</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:layout_marginBottom">@dimen/app_toolbar_bottom_height</item>
    </style>

    <style name="AppToolbar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="AppToolbarBottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_toolbar_bottom_height</item>
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="AppBottomText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/transparent_white</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="AppCardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">-3dp</item>
        <item name="android:layout_marginRight">-2dp</item>
        <item name="android:layout_marginLeft">-2dp</item>

    </style>

    <style name="AppCardViewRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>

        <!--<item name="android:paddingTop">16dp</item>-->
        <!--<item name="android:paddingBottom">16dp</item>-->

        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ToNextButton">
        <item name="backgroundTint">@color/to_next_button_background</item>
        <item name="fabSize">mini</item>

        <item name="android:src">@drawable/ic_skip_next_24dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="ToNextButton.Polyfill">
        <!-- see also res/values-v21 -->
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="AppFloatingActionButton">
        <item name="backgroundTint">@color/to_next_button_background</item>
        <item name="fabSize">normal</item>
        <item name="rippleColor">@color/brandeis_blue</item>

        <item name="android:src">@drawable/ic_add_24dp</item>
        <item name="android:clickable">true</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">18dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="AppTextInputLayout">
        <item name="colorControlNormal">@color/awafujiiro</item><!-- underline below EditText -->
    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/to_next_button_background</item>
    </style>

    <dimen name="app_toolbar_bottom_height">38dp</dimen>

    <color name="text_primary">@color/rouiro</color>
    <color name="text_secondary">#4b4b4b</color>
    <color name="text_tertiary">#909090</color>

    <color name="toolbar_background">@color/dark_imperial_blue</color>
    <color name="list_background">@color/opaque_blue</color>
    <color name="to_next_button_background">@color/lapis_lazuli</color>

    <color name="opaque_orange">#faf0ec</color>
    <color name="opaque_blue">#ecf1ff</color>
    <color name="opaque_green">#ecfff1</color>

    <color name="light_gray">#e6e6e6</color>
    <color name="lighter_background_blue">#f8faff</color>

    <!-- this value is affected by the opacity of drawer icon (dark theme) -->
    <color name="transparent_white">#89ffffff</color>

</resources>
